<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_callback_listener"
            style="@style/button_common_style"
            android:text="Listener" />

        <Button
            android:id="@+id/btn_callback_observer"
            style="@style/button_common_style"
            android:layout_below="@+id/btn_callback_listener"
            android:text="Observer" />

        <Button
            android:id="@+id/btn_callback_eventbus"
            style="@style/button_common_style"
            android:layout_below="@+id/btn_callback_observer"
            android:text="EventBus" />

        <Button
            android:id="@+id/btn_callback_broadcast"
            style="@style/button_common_style"
            android:layout_below="@+id/btn_callback_eventbus"
            android:text="Broadcast" />

    </RelativeLayout>
</RelativeLayout>
