<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_task_noresult"
            style="@style/button_common_style"
            android:text="NoResult" />

        <Button
            android:id="@+id/btn_task_withresult"
            style="@style/button_common_style"
            android:layout_below="@id/btn_task_noresult"
            android:text="WithResult" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:text="https://github.com/ddnosh/android-tiny-task"/>
</RelativeLayout>
