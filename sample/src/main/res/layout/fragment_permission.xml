<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <Button
            android:id="@+id/btn_permission_call"
            style="@style/button_common_style"
            android:text="Make a call" />

        <Button
            android:id="@+id/btn_permission_audio"
            style="@style/button_common_style"
            android:layout_below="@+id/btn_permission_call"
            android:text="Record an audio" />

        <Button
            android:id="@+id/btn_permission_camera"
            style="@style/button_common_style"
            android:layout_below="@+id/btn_permission_audio"
            android:text="Take a picture" />

    </RelativeLayout>
</RelativeLayout>
