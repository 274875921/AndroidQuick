<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Button
        android:id="@+id/btn_proxy_static"
        style="@style/button_common_style"
        android:text="静态代理" />

    <Button
        android:id="@+id/btn_proxy_dynamic"
        style="@style/button_common_style"
        android:text="动态代理" />

    <Button
        android:id="@+id/btn_proxy_dynamic_factory"
        style="@style/button_common_style"
        android:text="动态代理+简单工厂" />

    <Button
        android:id="@+id/btn_proxy_aop"
        style="@style/button_common_style"
        android:text="AOP" />

    <Button
        android:id="@+id/btn_proxy_aop_retrofit"
        style="@style/button_common_style"
        android:text="仿Retrofit" />

</LinearLayout>